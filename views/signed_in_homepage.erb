          <div class="col-6">
            <form action="/posts" method="POST">
              <div class="form-group">
                <label for="blog_post">Write a Post</label><br>
                <textarea name="title" class="form-control" placeholder="Enter title here"></textarea>
                <textarea name="content" class="form-control" placeholder="Type here" id="blogposttextarea" rows="30" columns="20"></textarea>
                <span class="border border-warning"><input type="submit" value="Post" id="blogbutton"></span>
              </div>
            </form>
          </div>

          
          <div class="col">
            <ul>
                <li class="subhedfont">#Trending Topics</li>
                 <% @posts.each do |post| %>
                <h2> <%= post.title %> </h2><br>
                <%#="by #{post.user.username}"%>
                <p class="content"> <%= post.content %> </p>
                <%#<p><img src="<%= post.image %>
                <p> <%= "#{post.created_at.strftime("%b %d, %Y")}" %> </p>
              <% end %>
                
            </ul>
          </div>
